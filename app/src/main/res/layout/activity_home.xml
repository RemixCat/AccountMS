<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical"
    android:background="#e4e9e7">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e9e7">


    <LinearLayout
        android:paddingTop="30dp"
        android:background="@drawable/tabtop"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/addincomeli"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgaddincome"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/addin"
                android:layout_gravity="center_vertical|center_horizontal"
                />

            <TextView
                android:id="@+id/addincome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="添加收入"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/adddisbursementli"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/addout"
                android:layout_gravity="center_vertical|center_horizontal"
                />

            <TextView
                android:id="@+id/adddisbursement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="添加支出"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/Controlincomeli"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgcont"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/incnt"
                android:layout_gravity="center_vertical|center_horizontal"
                />

            <TextView
                android:id="@+id/Controlincome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="收入管理"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/Controldisbursementli"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/outcnt"
                android:layout_gravity="center_vertical|center_horizontal"
                />

            <TextView
                android:id="@+id/Controldisbursement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="支出管理"
                android:textStyle="bold" />


        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:background="#ffffff"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账单"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mony_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/mony_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="收入"
                android:textAlignment="center"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="支出"
                android:textAlignment="center"
                android:textColor="@android:color/black" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#e1e0e0"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="最近收入"
            android:textColor="@android:color/black"
            android:drawableLeft="@drawable/home_dian" />

        <ListView
            android:background="#ffffff"
            android:id="@+id/in_zuijin"
            android:layout_width="match_parent"
            android:layout_height="80dp">

        </ListView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#e1e0e0"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="最近支出"
            android:textColor="@android:color/black"
            android:drawableLeft="@drawable/home_dian" />

        <ListView
            android:background="#ffffff"
            android:id="@+id/out_zuijin"
            android:layout_width="match_parent"
            android:layout_height="80dp">

        </ListView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#e1e0e0"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="最近标签"
            android:textColor="@android:color/black"
            android:drawableLeft="@drawable/home_dian" />

        <ListView
            android:background="#ffffff"
            android:id="@+id/note_zuijin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--------------------我是底线--------------------"
            android:textColor="@android:color/black"
            android:textAlignment="center" />
    </LinearLayout>


</LinearLayout>

    </ScrollView>